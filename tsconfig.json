{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"jsx": "react-jsx",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "node"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
